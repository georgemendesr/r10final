# ========================================
# .ENV TEMPLATE - PRODUÇÃO
# Copiar para .env e preencher valores reais
# ========================================

# ===== AMBIENTE =====
NODE_ENV=production

# ===== PORTAS =====
PORT_BACKEND=3002
PORT_INSTAGRAM=8080
PORT_TTS=3001

# ===== BANCO DE DADOS =====
# Caminho absoluto no servidor (ajustar conforme seu usuário)
DATABASE_PATH=/home/seuusuario/r10final/server/noticias.db

# ===== INSTAGRAM API =====
# Obter em: https://developers.facebook.com/apps/
INSTAGRAM_ACCESS_TOKEN=seu_instagram_access_token_aqui
INSTAGRAM_BUSINESS_ID=seu_instagram_business_id_aqui

# ===== FACEBOOK API =====
# Obter em: https://developers.facebook.com/apps/
FACEBOOK_PAGE_ID=seu_facebook_page_id_aqui
FACEBOOK_ACCESS_TOKEN=seu_facebook_access_token_aqui

# ===== GROQ AI (para geração de legendas) =====
# Obter em: https://console.groq.com/
GROQ_API_KEY=sua_groq_api_key_aqui

# ===== JWT (autenticação) =====
# Gerar com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=gerar_uma_chave_secreta_aleatoria_aqui
JWT_REFRESH_SECRET=gerar_outra_chave_secreta_diferente_aqui

# ===== CORS =====
# Ajustar para seu domínio real
ALLOWED_ORIGINS=https://seudominio.com.br,https://www.seudominio.com.br

# ===== UPLOADS =====
# Caminho absoluto no servidor
UPLOAD_DIR=/home/seuusuario/r10final/uploads
MAX_FILE_SIZE=15728640

# ===== OTIMIZAÇÕES =====
# Limites de memória
CANVAS_MEM_LIMIT=300
SHARP_CONCURRENCY=1
MAX_OLD_SPACE_SIZE=450

# ===== LOGS =====
LOG_LEVEL=info
LOG_DIR=/home/seuusuario/r10final/logs

# ===== PUPPETEER =====
# Deixar vazio (usa otimizações padrão)
PUPPETEER_EXECUTABLE_PATH=

# ===== URL BASE =====
# URL pública do seu site
PUBLIC_BASE_URL=https://seudominio.com.br

{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Iniciar Todos os Serviços",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "detail": "Inicia todos os serviços: Frontend (5175), Backend (3002), Instagram (8080) e TTS (3001)"
    },
    {
      "label": "Parar Todos os Serviços",
      "type": "shell",
      "command": "taskkill",
      "args": ["/f", "/im", "node.exe"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Para todos os processos Node.js em execução"
    },
    {
      "label": "Frontend apenas",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:frontend"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Inicia apenas o frontend React/Vite (porta 5175)"
    },
    {
      "label": "Backend apenas",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:backend"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [],
      "detail": "Inicia apenas o backend SQLite (porta 3002)"
    }
  ]
}

{
  "name": "r10-instagram-publisher",
  "version": "1.0.0",
  "description": "Aplicação standalone para geração e publicação de cards no Instagram",
  "main": "server.js",
  "scripts": {
    "dev": "node r10-manager.js start",
    "start": "node server/server-production.cjs",
    "start:full": "node r10-manager.js start",
    "stop": "node r10-manager.js stop",
    "status": "node r10-manager.js status",
    "restart": "node r10-manager.js restart",
    "dev:old": "node start-services.js",
    "dev:pm2": "pm2 start ecosystem.config.js",
    "dev:safe": "concurrently \"npm:install-all\" \"npm:start-all\"",
    "install-all": "npm install && cd r10-front_full_07ago && npm install",
    "start-all": "concurrently --kill-others --prefix-colors=\"green,cyan,yellow\" --prefix=\"[{name}]\" --names=\"BACKEND,FRONTEND,INSTAGRAM\" \"node server/server-api-simple.cjs\" \"cd r10-front_full_07ago && npm run dev\" \"node server.js\"",
    "dev:frontend": "cd r10-front_full_07ago && npm run dev",
    "dev:backend": "node server/server-api-simple.cjs",
    "dev:instagram": "cross-env PORT=8080 node server.js",
    "stable:single": "node stable-single.cjs",
    "start:9000": "cmd /c \"set PORT=9000&& node server.js\"",
    "start:instagram": "set PORT=8080&& node server.js",
    "start:backend": "node server/server-api-simple.cjs",
    "start:tts": "node server/simple-server.cjs",
    "postinstall": "node scripts/fetch-fonts.cjs",
    "fetch:fonts": "node scripts/fetch-fonts.cjs",
    "db:backup": "node scripts/backup-db.cjs",
    "db:migrate:chapeu": "node scripts/migrate-add-chapeu.cjs",
    "db:check:chapeu": "node scripts/check-chapeu.cjs",
    "db:setup": "node server/setup-database.js",
    "db:fix-images": "node server/fix-images.js",
    "build": "cd r10-front_full_07ago && npm ci && npm run build",
    "build:render": "node scripts/init-render.js && cd r10-front_full_07ago && npm install && npm run build && node server/setup-database.js",
    "serve:prod": "node server/server-production.cjs",
    "dev:all": "node scripts/dev-all.cjs",
    "api:3002": "node server/server-api-simple.cjs",
    "api:3002:watch": "nodemon server/server-api-simple.cjs",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --runInBand --silent",
    "test:debug": "node --trace-warnings ./node_modules/jest/bin/jest.js --runInBand --detectOpenHandles"
  },
  "keywords": [
    "instagram",
    "cards",
    "publisher",
    "r10"
  ],
  "author": "R10 Piauí",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@google-cloud/text-to-speech": "^6.3.0",
    "@napi-rs/canvas": "^0.1.54",
    "canvas": "^3.2.0",
    "cloudinary": "^2.7.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "fs-extra": "^11.1.1",
    "helmet": "^8.0.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.20.0",
    "sanitize-html": "^2.13.1",
    "sharp": "^0.33.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/supertest": "^2.0.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.9",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.0.0"
  }
}
